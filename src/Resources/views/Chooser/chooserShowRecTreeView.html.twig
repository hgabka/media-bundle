<li class="{% if mediaFolder.id in parentIds %}jstree-open{% endif %}" data-jstree='{"type":"{{ mediaFolder.rel }}"}' rel="{{ mediaFolder.rel }}">
    <a href="{{ path('HgabkaMediaBundle_chooser_show_folder', urlParams|merge({ 'folderId': mediaFolder.id })) }}" class="{% if folder is not null and folder.id == mediaFolder.id %}active{% endif %}">
        {{ mediaFolder.translations[app.request.locale] is defined ? mediaFolder.translations[app.request.locale].name : 'hg_media.label.no_translation'|trans }}
    </a>
    {% if mediaFolder.__children is not empty %}
        <ul>
            {% for mediaFolder in mediaFolder.__children %}
                {% include '@HgabkaMedia/Chooser/chooserShowRecTreeView.html.twig' %}
            {% endfor %}
        </ul>
    {% endif %}
</li>
