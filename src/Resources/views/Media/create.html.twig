{% extends '@HgabkaMedia/Default/layout.html.twig' %}
{% form_theme form '@HgabkaMedia/Form/fields.html.twig' %}

{% block header %}{% endblock %}

{% block admin_content %}
    {{ form_start(form, {'method': 'POST', 'action': path('HgabkaMediaBundle_media_create', { 'folderId' : folder.id, 'type': type }), 'attr': {'novalidate': 'novalidate'}}) }}
    <!-- Header -->
    <header class="app__content__header">
        <div class="row">
            <div class="col-sm-6 col-md-8">
                <h1 class="app__content__header__title">
                    {{ 'hg_media.media.addto'| trans({'%folder%': folder.name|trans }) | raw }}
                </h1>
            </div>
            <div class="col-sm-6 col-md-4">
                <!-- Main-actions -->
                <div class="js-auto-collapse-buttons page-main-actions page-main-actions--no-tabs page-main-actions--inside-extra-actions-header">
                    <div class="btn-group">
                        {% block actions %}
                            <button type="submit" class="btn btn-primary btn--raise-on-hover">
                                {{ 'hg_media.file.add' | trans }}
                            </button>
                            <a class="btn btn-default btn--raise-on-hover" href="{{ path('admin_hgabka_media_media_list', { 'folderId' : folder.id } ) }}">
                                {{ 'hg_media.form.cancel' | trans }}
                            </a>
                        {% endblock %}
                    </div>
                </div>
            </div>
        </div>
    </header>


    <!-- Scroll-actions -->
        <div class="page-main-actions page-main-actions--top" id="page-main-actions-top">
            <div class="btn-group">
                {{ block('actions') }}
                <button type="button" class="js-scroll-to-top btn btn-default btn--raise-on-hover">
                    <i class="fas fa-caret-up"></i>
                </button>
            </div>
        </div>

        <!-- Fields -->
        <fieldset class="form__fieldset--padded">
            {{ form_widget(form) }}
        </fieldset>
    {{ form_end(form) }}
{% endblock %}
